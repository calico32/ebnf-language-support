{
  "name": "ebnf-language-support",
  "displayName": "EBNF Language Support",
  "description": "EBNF Language Support for Visual Studio Code",
  "publisher": "devdoge1",
  "version": "1.1.4",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/calico32/ebnf-language-support"
  },
  "scripts": {
    "generate": "cat syntaxes/ebnf.YAML-tmLanguage | yq > syntaxes/ebnf.tmLanguage.json",
    "watch": "watchexec -w syntaxes -e YAML-tmLanguage -r \"bun generate\"",
    "build": "vsce package",
    "vscode:prepublish": "bun generate && bun compile",
    "compile": "esbuild --bundle --platform=node --format=cjs --target=es2022 --sourcemap=inline --outfile=out/extension.js --external:vscode extension/main.ts"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#282c34",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "ebnf",
        "aliases": [
          "Extended Backus-Naur Form",
          "ebnf"
        ],
        "extensions": [
          "ebnf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ebnf",
        "scopeName": "source.ebnf",
        "path": "./syntaxes/ebnf.tmLanguage.json"
      }
    ]
  },
  "configurationDefaults": {
    "[ebnf]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "dependencies": {
    "didyoumean": "^1.2.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/didyoumean": "^1.2.0",
    "@types/node": "^24.4.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "yq": "^0.0.1"
  }
}
