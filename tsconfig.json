{
  "exclude": ["test", "scripts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  }
}
